- meta title: t('d.signup')

- if params.has_key? :app
    %h2= t('devise.registrations.new.app.title')
- else
    %h2= t('devise.registrations.new.no_app.title')
%p= t('devise.registrations.new.content')

= simple_form_for resource, as: resource_name, url: user_registration_url do |f|
    = f.input :app_id, as: :hidden, required: false, input_html: { value: params[:app] }
    .myg-form-field--inline-container
        = component 'myg/form-field', as: :input, attribute: :first_name, class_name: 'user', floating_label: t('devise.registrations.new.form.first_name'), input_html: { required: true, autofocus: true }
        = component 'myg/form-field', as: :input, attribute: :last_name, class_name: 'user', floating_label: t('devise.registrations.new.form.last_name'), input_html: { required: true }
    = component 'myg/form-field', as: :input, attribute: :email, class_name: 'user', floating_label: t('d.email'), input_html: { required: true, type: 'email' }
    = component 'myg/form-field', as: :input, attribute: :password, class_name: 'user', floating_label: t('d.password'), input_html: { required: true, type: 'password', minlength: 5 }
    .flex.space-between
        %p.sm
            = link_to t('devise.registrations.new.form.login_instead'), new_user_session_url(app: params[:app]), class: 'hyperlink--inherit', data: { turbolinks_animate_type: 'devise' }
        = component 'myg/button', value: t('d.signup')
